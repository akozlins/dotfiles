{
    "breadcrumbs.enabled": false,
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/cmake-build"
    ],
    "cmake.buildDirectory": "${workspaceFolder}/cmake-build",
    "cmake.configureArgs": [
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
    ],
    "cmake.configureOnOpen": true,
    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingOvertype": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.comments.insertSpace": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorSurroundingLines": 1,
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "'JetBrains Mono NL', 'DejaVu Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 16,
    "editor.hover.delay": 500,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.minimap.showSlider": "always",
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.padding.bottom": 2,
    "editor.padding.top": 2,
    "editor.parameterHints.cycle": true,
    "editor.renderWhitespace": "all",
    "editor.roundedSelection": false,
    "editor.scrollbar.vertical": "visible",
    "editor.showFoldingControls": "always",
    "editor.useTabStops": false,
    "editor.unicodeHighlight.includeComments": true,
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.wordWrap": "off",
    "files.autoSave": "onFocusChange",
    "files.enableTrash": false,
    "files.eol": "\n",
    "files.exclude": {
        "**/.cache": true,
    },
    "files.trimTrailingWhitespace": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    "telemetry.telemetryLevel": "off",
    "workbench.colorCustomizations": {
        "tab.activeBorder": "#00CC00",
        "tab.unfocusedActiveBorder": "#000000"
    },
    "window.title": "${rootPath}${separator}${activeEditorMedium}${dirty}",
    "window.zoomLevel": 1,
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.enableExperiments": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.tree.expandMode": "doubleClick",
}