//
{
    "accessibility.signals.clear": {
        "sound": "off",
        "announcement": "off" ,
    },
    "breadcrumbs.enabled": false,
    "breadcrumbs.icons": false,
    "chat.commandCenter.enabled": false,
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/cmake-build",
        "--header-insertion=never",
    ],
    "cmake.automaticReconfigure": true,
    "cmake.buildDirectory": "${workspaceFolder}/cmake-build",
    "cmake.configureArgs": [
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=1",
    ],
    "cmake.configureOnOpen": false,
    "cmake.options.advanced": {
        "cpack": {
            "statusBarVisibility": "hidden"
        },
        "workflow": {
            "statusBarVisibility": "hidden"
        }
    },
    "cmake.options.statusBarVisibility": "compact",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.showConfigureWithDebuggerNotification": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingComments": "never",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingOvertype": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.comments.insertSpace": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorSurroundingLines": 1,
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "editor.dropIntoEditor.enabled": false,
    "editor.emptySelectionClipboard": false,
    "editor.folding": false,
    "editor.fontFamily": "'JetBrains Mono NL', 'DejaVu Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 16,
    "editor.hover.delay": 500,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.minimap.showSlider": "always",
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.padding.bottom": 2,
    "editor.padding.top": 2,
    "editor.parameterHints.cycle": true,
    "editor.renderWhitespace": "all",
    "editor.roundedSelection": false,
    "editor.selectionClipboard": false,
    "editor.scrollbar.vertical": "visible",
    "editor.showFoldingControls": "always",
    "editor.stickyScroll.enabled": false,
    "editor.stickyScroll.maxLineCount": 1,
    "editor.useTabStops": false,
    "editor.unicodeHighlight.includeComments": true,
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.wordWrap": "off",
    "explorer.autoReveal": false,
    "explorer.enableDragAndDrop": false,
    "explorer.excludeGitIgnore": true,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.sdc": "tcl",
    },
    "files.autoSave": "onFocusChange",
    "files.enableTrash": false,
    "files.eol": "\n",
    "files.exclude": {
        "**/.cache": true,
    },
    "files.trimTrailingWhitespace": true,
    "git.defaultBranchName": "master",
    "git.openRepositoryInParentFolders": "never",
    "notebook.dragAndDropEnabled": false,
    "output.smartScroll.enabled": false,
    "scm.diffDecorationsGutterPattern": {
        "modified": false,
    },
    "scm.defaultViewMode": "tree",
    "scm.diffDecorationsIgnoreTrimWhitespace": "true",
    "search.defaultViewMode": "tree",
    "search.followSymlinks": false,
    "search.maxResults": null,
    "search.showLineNumbers": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    "telemetry.telemetryLevel": "off",
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "window.autoDetectHighContrast": false,
    "window.commandCenter": false,
    "window.enableMenuBarMnemonics": false,
    "window.newWindowDimensions": "inherit",
    "window.menuBarVisibility": "visible",
    "window.title": "${rootPath} | ${activeEditorMedium}${dirty}",
    "window.titleBarStyle": "native",
    "window.zoomLevel": 1,
    "workbench.colorCustomizations": {
        "tab.unfocusedHoverBackground": "#606060",
        "tab.hoverBackground": "#606060",
        "tab.activeBackground": "#404040",
        "scrollbarSlider.background": "#80808080",
        "scrollbarSlider.hoverBackground": "#A0A0A080",
        "scrollbarSlider.activeBackground": "#A0A0A080",
    },
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.enablePreview": false,
    "workbench.editor.splitOnDragAndDrop": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.enableExperiments": false,
    "workbench.layoutControl.enabled": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.navigationControl.enabled": false,
    "workbench.reduceMotion": "on",
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.tree.expandMode": "doubleClick",
    "workbench.tree.indent": 18,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.enableStickyScroll": false,
    "workbench.welcomePage.walkthroughs.openOnInstall": false,
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    },
    "[markdown]": {
        "editor.wordWrap": "off",
    },
}
