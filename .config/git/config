#

[alias]
	log-fzf = "! git log --pretty=format:'%h %s' --color=always | fzf --ansi | cut -d' ' -f1"
	rebase-fzf = "! xargs -ra <(git log-fzf) git rebase -i"
	reset-fzf = "! xargs -ra <(git diff --staged --name-only | fzf --ansi) git reset --"
	add-fzf = "! xargs -ra <(git diff --name-only | fzf --ansi) git add -p --"

[commit]
#	gpgsign = true

[color "diff"]
	meta = yellow
	frag = magenta bold
	func = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse

[core]
	autocrlf = input
	editor = nano
	whitespace = trailing-space,space-before-tab
#	pager = delta
#	pager = diffr | less -R

[diff]
	algorithm = histogram
	colorMoved = blocks
	colorMovedWS = allow-indentation-change
	tool = meld

[gc]
	autoPackLimit = 8
	bigPackThreshold = 1m

[init]
	defaultBranch = master

[interactive]
#	diffFilter = delta --color-only
#	diffFilter = diffr

[merge]
	conflictStyle = diff3
#	conflictStyle = zdiff3
	tool = meld

[pull]
	ff = only

[push]
	autoSetupRemote = true

[stash]
	showPatch = true

[status]
	short = true
	submoduleSummary = true

[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/

[url "git@github.com:"]
	pushInsteadOf = https://github.com/

[user]
#	signingkey = 0000000000000000
