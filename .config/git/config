#

[alias]
	log-fzf = "! git log --pretty=format:'%cs %h %s' --color=always | fzf --ansi --preview 'git show {2}' | cut -d' ' -f2"
	# fzf commit and rebase
	rebase-fzf = "! xargs -ra \
		<(git log-fzf) \
		git rebase -i"
	# `add -p` on changed files
	add-fzf = "! xargs -ra \
		<(git diff --name-only | fzf --ansi --preview 'git diff -- {}') \
		git add -p --"
	# `reset -p` on staged files
	reset-fzf = "! xargs -ra \
		<(git diff --staged --name-only | fzf --ansi --preview 'git diff --cached -- {}') \
		git reset -p --"
	#

[commit]
#	gpgsign = true

[color "diff"]
	meta = yellow
	frag = magenta bold
	func = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse

[core]
	autocrlf = input
	editor = nano
	whitespace = trailing-space,space-before-tab
#	pager = cat
#	pager = delta
#	pager = diffr | less -R

[diff]
	algorithm = histogram
	colorMoved = blocks
	colorMovedWS = allow-indentation-change
	tool = meld

[gc]
	autoPackLimit = 8
	bigPackThreshold = 1m

[init]
	defaultBranch = master

[interactive]
#	diffFilter = delta --color-only
#	diffFilter = diffr

[merge]
	conflictStyle = diff3
#	conflictStyle = zdiff3
	ff = false
	tool = meld

[pull]
	ff = only

[push]
	autoSetupRemote = true

[rebase]
	committer-date-is-author-date = true

[stash]
	showPatch = true

[status]
	short = true
	submoduleSummary = true

[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/

[url "git@github.com:"]
	pushInsteadOf = https://github.com/

