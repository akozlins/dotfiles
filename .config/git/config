#

[alias]
	# list all objects (blobs, etc.) and sort by size
	# output: hash type size name
	ls-blobs = "! git-ls-blobs.sh"
	# fzf commit
	log-fzf = "! git log --pretty=format:'%cs %h %s' --color=always | fzf --ansi --preview 'git show {2}' | cut -d' ' -f2"
	# fzf commit and rebase
	rebase-fzf = "! xargs -ra \
		<(git log-fzf) \
		git rebase -i"
	pick-fzf = "! xargs -ra \
		<(git log --pretty=format:'%cs %h %s' --color=always $(git for-each-ref --format='%(refname:short)' refs/remotes/) ^HEAD | fzf --ansi --preview 'git show {2}' | cut -d' ' -f2) \
		git cherry-pick"
	# `add -p` on changed files
	add-fzf = "! xargs -ra \
		<(git diff --name-only | fzf --ansi --preview 'git diff -- {}') \
		git add -p --"
	# `reset -p` on staged files
	reset-fzf = "! xargs -ra \
		<(git diff --staged --name-only | fzf --ansi --preview 'git diff --cached -- {}') \
		git reset -p --"
	# `stash -p` on changed files
	stash-fzf = "! xargs -ra \
		<(git diff --name-only | fzf --ansi --preview 'git diff -- {}') \
		git stash -p --"
	#
	add-re = "! git-add-re.py"
	#
	lazy = "! lazygit"
	diff-stash = "! meld <(git diff) <(git stash show -p)"
	#
	moo = "! cowsay 'Have you mooed today?'"

[branch]
	sort = -committerdate

[commit]
#	gpgsign = true
	verbose = true

[color "diff"]
	meta = yellow
	frag = magenta bold
	func = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse

[core]
	autocrlf = input
	editor = nano
	whitespace = trailing-space,space-before-tab
#	pager = cat
#	pager = delta
#	pager = diffr | less -R

[diff]
	algorithm = histogram
	colorMoved = blocks
	colorMovedWS = allow-indentation-change
	renames = true
	tool = meld

[gc]
	autoPackLimit = 8
	bigPackThreshold = 1m

[init]
	defaultBranch = master

[interactive]
#	diffFilter = delta --color-only
#	diffFilter = diffr

[log]
	date = iso

[merge]
	conflictStyle = diff3
#	conflictStyle = zdiff3
	ff = false
	tool = meld

[mergetool "meld"]
	useAutoMerge = false

[pull]
	ff = only

[push]
	autoSetupRemote = true

[rebase]
	committer-date-is-author-date = true

[rerere]
	enabled = true

[stash]
	showPatch = true

[status]
	short = true
	submoduleSummary = true

[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/

[url "git@github.com:"]
	pushInsteadOf = https://github.com/

