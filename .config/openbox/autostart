#!/bin/sh
set -uf

run() {
    delay="$1"
    shift
    cmd="$1"
    shift

    (
        sleep "$delay"
        [ -n "$(pidof "$cmd")" ] || exec "$cmd" "$@" > /dev/null 2>&1
    ) &
}

# disable bell
xset b off
# set autorepeat (delay 200 ms, rate 40)
xset r rate 200 40
# set black background
xsetroot -solid black

run 2s fbpanel
run 3s conky

run 1s xss-lock -l -- "~/bin/lock.sh"

if command -v xsecurelock &> /dev/null ; then
    true
elif command -v xscreensaver &> /dev/null ; then
    run 1s xscreensaver
fi

run 5s easystroke

#[ -x "$DOTFILES/opt/setlayout/setlayout" ] && "$DOTFILES/opt/setlayout/setlayout" 0 4 2 0
