#!/bin/bash
set -euf

PATH="$(command -p getconf PATH)"
export PATH

CMD=(tor-browser "$@")

private="$XDG_CACHE_HOME/tor-browser"
mkdir -pv -- "$private"

CMD=(firejail "--private=$private" -- "${CMD[@]}")

if [ $# -eq 0 ] ; then
    exec "${CMD[@]}" > /dev/null 2>&1 &
else
    exec "${CMD[@]}"
fi
