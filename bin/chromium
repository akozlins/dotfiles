#!/bin/bash
set -euf

export HOME="$DOTFILES"

USER_DATA_DIR="$XDG_DATA_HOME/chromium"

if [ ! -d "$USER_DATA_DIR" ] ; then
    cp -r "$XDG_CONFIG_HOME/chromium" "$USER_DATA_DIR"
fi

CMD=(
    "/bin/chromium"
    --user-data-dir="$USER_DATA_DIR"
    --password-store=basic
    # ...
    --disable-background-networking
    "$@"
)

if [ $# -eq 0 ] ; then
    "${CMD[@]}" > /dev/null 2>&1 &
else
    "${CMD[@]}"
fi
