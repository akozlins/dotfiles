#!/bin/bash
set -euf

unset CDPATH
export HOME="$DOTFILES"
cd "$HOME" || exit 1

USER_DATA_DIR="$XDG_CACHE_HOME/chromium"

CMD=("/usr/bin/chromium"
    --user-data-dir="$USER_DATA_DIR"
    # ...
    --disable-background-networking
    "$@"
)

if [ $# -eq 0 ] ; then
    (
        "${CMD[@]}"
    ) > /dev/null 2>&1 &
else
    (
        "${CMD[@]}"
    )
fi
