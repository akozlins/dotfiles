#!/bin/sh
set -euf

#DOTFILES="${DOTFILES:-$HOME/.dotfiles}"
#[ -d "$DOTFILES" ] && export HOME="$DOTFILES"

XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"
MY_LOG="$XDG_CACHE_HOME/flatpak/$(echo "$*" | tr ' ' _).log"
mkdir -p -- "$(dirname "$MY_LOG")"

exec \
/usr/bin/flatpak "$@" 2>&1 \
| ts '%Y-%m-%dT%H:%M:%S' \
>> "$MY_LOG" &
