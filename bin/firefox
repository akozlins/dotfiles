#!/bin/sh
set -euf

profile="$XDG_CONFIG_HOME/firefox/default"

if [ ! -f "$profile/prefs.js" ] ; then
    echo "Profile '$profile' not found!"
    exit 1
fi

CMD="/usr/bin/firefox --profile $profile"

[ -x /usr/bin/firejail ] && CMD="/usr/bin/firejail -- $CMD"

if [ $# -eq 0 ] ; then
  exec $CMD "$@" > /dev/null 2>&1 &
else
  exec $CMD "$@"
fi
