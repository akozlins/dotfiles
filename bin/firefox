#!/bin/bash
set -euf

unset CDPATH
export HOME="$DOTFILES"
cd "$HOME" || exit 1

CMD=("$@")

if [[ ! " $* " =~ " --profile " ]] ; then
    CMD=(--profile "$XDG_CONFIG_HOME/firefox/default" "${CMD[@]}")
fi

CMD=("/usr/bin/firefox" "${CMD[@]}")

FJ="/usr/bin/firejail"
#[ -x "$FJ" ] && CMD=("$FJ" -- "${CMD[@]}")

if [ $# -eq 0 ] ; then
    exec "${CMD[@]}" > /dev/null 2>&1 &
else
    exec "${CMD[@]}"
fi
