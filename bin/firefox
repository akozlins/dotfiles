#!/bin/bash
set -euf

unset CDPATH
export HOME="$DOTFILES"
cd "$HOME" || exit 1

if [[ ! " $* " =~ " --profile " ]] ; then
    set -- --profile "$XDG_CONFIG_HOME/firefox/default" "$@"
fi

CMD=("/usr/bin/firefox" "$@")

FJ="/usr/bin/firejail"
#[ -x "$FJ" ] && CMD=("$FJ" -- "${CMD[@]}")

if [ $# -eq 0 ] ; then
    exec "${CMD[@]}" > /dev/null 2>&1 &
else
    exec "${CMD[@]}"
fi
