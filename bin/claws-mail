#!/bin/bash
set -euf

export HOME="$DOTFILES"

CLAWS_MAIL_DIR="${CLAWS_MAIL_DIR:-$XDG_CONFIG_HOME/claws-mail}"

export GTK_DEBUG=1
export GTK_THEME=claws-mail

CMD=(
    "/bin/claws-mail"
    --alternate-config-dir "$CLAWS_MAIL_DIR"
    "$@"
)

if [ $# -eq 0 ] ; then
    exec "${CMD[@]}" > /dev/null 2>&1 &
else
    exec "${CMD[@]}"
fi
