#!/bin/bash
set -euf

DOTFILES="${DOTFILES:-$HOME/.dotfiles}"
[ -d "$DOTFILES" ] && export HOME="$DOTFILES"

CMD=()

command -v -- bwrap &> /dev/null && CMD+=(
    bwrap
    --dev-bind / /
    --tmpfs "$(readlink -f -- "$HOME/private")"
)

CMD+=(
    "$QUARTUS_ROOTDIR/bin/quartus"
    "$@"
)

[ $# -gt 0 ] && exec "${CMD[@]}"
exec "${CMD[@]}" &> /dev/null &
