#!/bin/bash
set -euf

export HOME="$DOTFILES"

VIVADO_CACHE="$XDG_CACHE_HOME/vivado"

if [ $# -eq 1 ] ; then
    mkdir -p "$VIVADO_CACHE"
    unset CDPATH
    cd "$VIVADO_CACHE" || exit 1
fi

VIVADO_OPTS=(-jvm Xmx2048m)

exec \
"$VIVADO_ROOTDIR/bin/vivado" \
    "${VIVADO_OPTS[@]}" \
    -nojournal -nolog \
    -tempDir "$VIVADO_CACHE" \
    "$@"
