#!/bin/sh
set -euf

# install:
# `wget https://github.com/mirukana/mirage/releases/download/v0.7.2/mirage-v0.7.2-x86_64.flatpak`
# `flatpak --user remote-add flathub https://flathub.org/repo/flathub.flatpakrepo`
# `flatpak --user install flathub org.kde.Platform//5.14`
# `flatpak --user install mirage-*.flatpak`

flatpak-bg run --user io.github.mirukana.mirage
