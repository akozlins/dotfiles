#!/bin/bash
set -euf

export QT_AUTO_SCREEN_SCALE_FACTOR=0

PRIVATE="$XDG_DATA_HOME/zoom"
mkdir -pv -- "$PRIVATE"

CMD=(
    /usr/bin/zoom
    "$@"
)

CMD=(
    /usr/bin/bwrap
    --dev-bind / /
    --bind "$PRIVATE" "$HOME"
    --die-with-parent
    --new-session
    --
    "${CMD[@]}"
)

[ $# -gt 0 ] && exec "${CMD[@]}"
exec "${CMD[@]}" &> /dev/null &
