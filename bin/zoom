#!/bin/bash
set -euf

export QT_AUTO_SCREEN_SCALE_FACTOR=0

private="$XDG_DATA_HOME/zoom"
mkdir -pv -- "$private"

CMD=(
    /usr/bin/zoom
    "$@"
)

CMD=(
    firejail
    "--private=$private"
#    --x11=xephyr --xephyr-screen=1600x1000
    --
    "${CMD[@]}"
)

[ $# -gt 0 ] && exec "${CMD[@]}"
exec "${CMD[@]}" &> /dev/null &
