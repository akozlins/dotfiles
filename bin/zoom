#!/bin/bash
set -euf

export QT_AUTO_SCREEN_SCALE_FACTOR=0

private="$XDG_DATA_HOME/zoom"
mkdir -pv -- "$private"

CMD=(
    "/bin/zoom"
    "$@"
)

CMD=(
    "/bin/firejail"
    "--private=$private"
#    --x11=xephyr --xephyr-screen=1600x1000
    --
    "${CMD[@]}"
)

if [ $# -eq 0 ] ; then
    exec "${CMD[@]}" > /dev/null 2>&1 &
else
    exec "${CMD[@]}"
fi
