#!/bin/sh
set -euf

#export IDEA_VM_OPTIONS="$XDG_CONFIG_HOME/intellij-idea/vmoptions"
export IDEA_PROPERTIES="$XDG_CONFIG_HOME/intellij-idea/properties"

if [ $# -eq 1 ] && [ "$1" = "--reset" ] ; then
    rm -rf "$HOME/.java"
    rm -rf "$XDG_CACHE_HOME/intellij-idea"
    exit 0
fi

exec \
/usr/bin/idea.sh "$@" \
> /dev/null 2>&1 &
