#!/bin/sh
set -euf

set -x

if [ ! -r /dev/input/js0 ] ; then
    exit 1
fi

# Devo-10 Deviation
jscal -u 8,0,1,2,3,4,5,6,7,4,288,289,290,291 /dev/input/js0
jscal -s 8,1,200,-1,-1,5422773,5315391,1,200,0,0,-5368545,-5368545,1,200,0,0,5368545,5368545,1,198,-1,-1,-5315391,-5422773,1,0,40,40,-2147483648,-2147483648,1,200,0,0,5368545,5368545,1,0,0,0,-2147483648,-2147483648,1,0,0,0,-2147483648,-2147483648 /dev/input/js0

exec \
"$HOME/.local/share/HELI-X8/runHELI-X.sh" "$@"
